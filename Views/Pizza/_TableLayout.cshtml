@model List<Pizza>

<table>
    <thead>
        <tr>
            <td>Nome</td>
            <td>Immagine</td>
            <td>Descrizione</td>
            <td>Prezzo</td>
        </tr>
    </thead>
    <tbody>


    @{
        foreach (var pizza in Model)
        {
            <tr>
                <td><a href="~/Pizza/Details/@pizza.Id">@pizza.Name</a></td>
                <td class="w-25"><img class="img-thumbnail w-50 h-50" src="@pizza.Image" /></td>
                <td>@pizza.Description</td>
                <td>@pizza.Price &euro;</td>
            </tr>
        }
    }

    </tbody>
</table>
